- if @format_error == true
  .error= 'invalid zip code format'
- elsif @error == true
  .error= 'zipcode not found'
- else
  #state
    .title-text= 'state'
    .data-text= @location[0] if !@location.nil?
  #city
    .title-text= 'city'
    .data-text= @location[1] if !@location.nil?
  #temp.data-text= @temp

= render 'notice' if flash[:notice].present?
